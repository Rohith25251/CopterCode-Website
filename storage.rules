rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Public read access for all media files
    match /media/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny for other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
