{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "vite",
  "headers": [
    {
      "source": "/(?:.*)\\.(?:js|css|svg|png|jpg|jpeg|gif|ico|woff|woff2|eot|ttf|otf|webp)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/studio/(.*)",
      "destination": "/studio/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}